---
import { Image } from 'astro:assets';
import type { Brand } from '../../types/brand';

interface Props {
  brand: Brand;
}

const { brand } = Astro.props;
---

<div class="p-4 sm:p-5 rounded-xl border border-box-border group bg-box-bg hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors duration-300">
  <Image 
    src={brand.logo}
    alt={brand.name}
    class="h-7 sm:h-10 w-auto ease-linear duration-300 grayscale group-hover:grayscale-0 group-hover:scale-105"
    width={100}
    height={60}
  />
</div>