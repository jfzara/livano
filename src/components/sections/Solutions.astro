---
interface Solution {
  title: string;
  subtitle: string;
  description: string;
  impact: string;
  imageSrc: string;
  reverse?: boolean;
  bgClass?: string;
}

const solutions: Solution[] = [
  {
    title: "Visibility Dilemma",
    subtitle: "Your brand is drowning in the vast sea of social media, struggling to be seen by your target audience.",
    description: "It's disheartening when your carefully crafted content goes unnoticed. Your potential customers are out there, but they simply can't find you amidst the digital noise.",
    impact: "Our targeted visibility strategies cut through the clutter, ensuring your brand is not just seen but remembered. Watch our video to see how we make your presence impossible to ignore.",
    imageSrc: "/src/assets/images/ImageChateau.webp",
    bgClass: "bg-orange-100 dark:bg-gray-800"
  },
  {
    title: "Engagement Gap",
    subtitle: "Despite your efforts, audience engagement remains lackluster, and interactions are not translating into meaningful connections.",
    description: "It's frustrating to see competitors effortlessly engaging their audience while your brand struggles to spark conversations. Your content deserves better results, and we have the solution.",
    impact: "Our proven engagement tactics ignite conversations, turning passive viewers into active participants. Explore how we bridge the engagement gap in our video walkthrough.",
    imageSrc: "/src/assets/images/ImageFoule.webp"
  },
  {
    title: "Results in Hibernation",
    subtitle: "Your social media efforts aren't translating into tangible results, leaving you wondering if your investment is paying off.",
    description: "It's disheartening when the metrics show little growth or impact. Your time and resources are valuable, and it's time to break free from the cycle of stagnant results.",
    impact: "Our data-driven approach ensures every action is purposeful, yielding measurable results. Dive into our video guide to witness how we turn social media activities into a powerful engine for your brand's success.",
    imageSrc: "/src/assets/images/ImageAthlete.webp",
    reverse: true,
    bgClass: "bg-orange-100 dark:bg-gray-800"
  }
];
---

<section id="solutions" class="flex flex-col pt-10 md:pt-16">
  {solutions.map((solution, index) => (
    <div class={`w-full py-10 md:py-16 ${solution.bgClass || 'bg-transparent'}`}>
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class={`flex flex-row items-center gap-8 ${index % 2 === 0 ? 'flex-row-reverse' : ''}`}>
          <div class="flex-1 min-w-0">
            <h1 class="text-heading-1 font-semibold text-2xl sm:text-3xl md:text-4xl dark:text-white">
              <span class="text-transparent bg-clip-text bg-gradient-to-br from-indigo-600 from-20% via-primary via-30% to-green-600">
                {solution.title}
              </span>
            </h1>
            <p class="md:text-lg text-heading-3 mt-4 font-medium text:lg md:text-2xl dark:text-gray-200">
              {solution.subtitle}
            </p>
            <p class="md:text-lg text-heading-3 mt-3 dark:text-gray-300">
              {solution.description}
            </p>
            <p class="md:text-lg text-heading-3 mt-3 font-medium dark:text-gray-200">
              {solution.impact}
            </p>
          </div>
          <div class="flex-1 min-w-0">
            <img
              src={solution.imageSrc}
              alt={`${solution.title} illustration`}
              class="w-full h-auto rounded-3xl object-cover"
              width="1240"
              height="1385"
              loading="lazy"
              decoding="async"
            />
          </div>
        </div>
      </div>
    </div>
  ))}
</section>